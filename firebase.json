{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "function": "fetchHome"
      },
      {
        "source": "/event",
        "function": "fetchEvent"
      },
      {
        "source": "/edit",
        "function": "fetchEdit"
      },
      {
        "source": "/api/:functionName",
        "function": ":functionName"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "hosting": {
      "port": 5000,
      "public": "public",
      "rewrites": [
        {
          "source": "/",
          "function": "fetchHome"
        },
        {
          "source": "/event",
          "function": "fetchEvent"
        },
        {
          "source": "/edit",
          "function": "fetchEdit"
        },
        {
          "source": "/api/:functionName",
          "function": ":functionName"
        }
      ]
    }
  }
}
